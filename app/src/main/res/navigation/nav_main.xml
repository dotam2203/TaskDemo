<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/moviesFragment">

  <fragment
      android:id="@+id/moviesFragment"
      android:name="com.task.fragments.MoviesFragment"
      android:label="fragment_movies"
      tools:layout="@layout/fragment_movies">
    <action
        android:id="@+id/moviesFragment_to_movieDetailFragment"
        app:destination="@id/movieDetailFragment" />
  </fragment>
  <fragment
      android:id="@+id/movieDetailFragment"
      android:name="com.task.fragments.MovieDetailFragment"
      android:label="fragment_movie_detail"
      tools:layout="@layout/fragment_movie_detail">
    <action
        android:id="@+id/movieDetailFragment_to_moviesFragment"
        app:destination="@id/moviesFragment" />
     <argument
        android:name="movie_detail"
        app:argType="com.task.model.MovieDetailModel" />
  </fragment>
</navigation>