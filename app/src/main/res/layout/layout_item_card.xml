<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="kotlin.Unit"/>
    <import type="kotlin.jvm.functions.Function1"/>
    <variable
        name="item"
        type="com.task.model.ParentList.DescriptionItem" />
    <variable
        name="onClickItemCard"
        type="Function1&lt;Integer,Unit>" />
  </data>

  <androidx.cardview.widget.CardView
      android:id="@+id/card_parent"
      android:layout_width="180dp"
      android:layout_height="250dp"
      android:layout_margin="20dp"
      app:cardElevation="4dp"
      android:onClick="@{() -> onClickItemCard.invoke(2)}"
      app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/custom_border_bottom"/>

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/text_title_top"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:textColor="@color/black"
          android:textSize="24sp"
          android:text="@{Integer.toString(item.id)}"
          android:textStyle="bold" />
      <androidx.appcompat.widget.AppCompatButton
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:background="@drawable/custom_border"
          android:text="Apply"
          android:layout_gravity="center"
          android:textAllCaps="false"
          android:textSize="18sp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</layout>