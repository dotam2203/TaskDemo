<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
  <ImageView
      android:id="@+id/image_icon_noti"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_star"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toStartOf="@id/text_title_noti"/>
  <TextView
      android:id="@+id/text_title_noti"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Notification"
      android:layout_marginStart="10dp"
      android:textSize="24sp"
      android:textColor="@color/black"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="@id/image_icon_noti"
      app:layout_constraintStart_toEndOf="@id/image_icon_noti"
      app:layout_constraintBottom_toBottomOf="@id/image_icon_noti"/>
  <TextView
      android:id="@+id/text_message_noti"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="The messaging"
      android:textSize="22sp"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/text_title_noti"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:ellipsize="none"/>
</androidx.constraintlayout.widget.ConstraintLayout>